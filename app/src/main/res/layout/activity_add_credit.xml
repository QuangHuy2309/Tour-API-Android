<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCredit">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="204dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="#1B2971"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px">

            <TextView
                android:id="@+id/txtTittle"
                android:layout_width="365dp"
                android:layout_height="78dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="34dp"
                android:background="@drawable/my_border02"
                android:backgroundTint="#5C93A8"
                android:fontFamily="@font/averia_sans_libre_bold"
                android:gravity="center_vertical"
                android:text="Thêm thẻ tín dụng/ Thẻ ghi nợ"
                android:textAlignment="center"
                android:textColor="#1B2971"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/csContainer"
                android:layout_width="362dp"
                android:layout_height="257dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/my_border02"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTittle">

                <EditText
                    android:id="@+id/edtMaCVV"
                    android:layout_width="213dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="16dp"
                    android:autofillHints=""
                    android:background="@drawable/my_border02"
                    android:ems="10"
                    android:fontFamily="@font/averia_sans_libre"
                    android:hint="Mã CVV..."
                    android:inputType="textPersonName"
                    android:textColor="#131212"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edMaGiamGia4" />

                <EditText
                    android:id="@+id/edMaGiamGia4"
                    android:layout_width="334dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:autofillHints=""
                    android:background="@drawable/my_border02"
                    android:ems="10"
                    android:fontFamily="@font/averia_sans_libre"
                    android:hint="Ngày hết hạn (MM/YY)"
                    android:inputType="textPersonName"
                    android:textColor="#131212"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtTen" />


                <EditText
                    android:id="@+id/edtTen"
                    android:layout_width="334dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:autofillHints=""
                    android:background="@drawable/my_border02"
                    android:ems="10"
                    android:fontFamily="@font/averia_sans_libre"
                    android:hint="Tên in trên thẻ..."
                    android:inputType="textPersonName"
                    android:textColor="#131212"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtSoThe" />

                <EditText
                    android:id="@+id/edtSoThe"
                    android:layout_width="334dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints=""
                    android:background="@drawable/my_border02"
                    android:ems="10"
                    android:fontFamily="@font/averia_sans_libre"
                    android:hint="Số thẻ..."
                    android:inputType="textPersonName"
                    android:textColor="#131212"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="152dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#1B2971"
                android:text="Lưu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/csContainer" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>